            <div class="main-content-inner">
                <div class="row">
                    <div class="col-12">
                        <a class="btn btn-success col-lg-12 mt-2 mb-2" href="/editNews?mode=new">Создать новость</a>
                    </div>
                    <div class="col-12 mt-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="preloaderBlock" style="display: none;">
                                    <div class="loader"></div>
                                </div>
                                <h4 class="header-title">Список новостей</h4>
                                <div class="data-tables datatable-dark">
                                    <table id="dataTable3" class="text-center">
                                        <thead class="text-capitalize">
                                            <tr>
                                                <th>№</th>
                                                <th>Название</th>
                                                <th>Дата</th>                                               
                                                <th>Просмотров</th>
                                                <th>Действия</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i = 0; i < newsData.length; i++){ %>
                                            <tr>
                                                <td><%= newsData[i].AI %></td>
                                                <td><%= newsData[i].title[0] %></td>
                                                <td><%= newsData[i].date %></td>                                               
                                                <td><%= newsData[i].views %></td>
                                                <td>
                                                    <button type="button" class="btn btn-danger btn-xs mb-3" onclick="NEWS.removenews('<%= newsData[i].AI %>')">Удалить</button>
                                                    <a href="/editNews?mode=edit,<%= newsData[i].AI %>" target="_blank" class="btn btn-warning btn-xs mb-3">Редактировать</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

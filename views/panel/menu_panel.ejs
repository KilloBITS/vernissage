            <div class="main-content-inner">
                <div class="row">
                    <!-- Modal -->
                    <div class="modal fade" id="newTypeModal">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Создание типа</h5>
                                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                                </div>
                                <div class="modal-body">
                                    <label for="pname-RU-new" class="col-form-label">Название на Русском</label>
                                    <input class="form-control" type="text" id="pname-RU-new" onkeyup="MENU.keyrusup()">

                                    <label for="pname-UA-new" class="col-form-label">Название на Украинском</label>
                                    <input class="form-control" type="text" id="pname-UA-new">

                                    <label for="pname-EN-new" class="col-form-label">Название на Английском</label>
                                    <input class="form-control" type="text" id="pname-EN-new">

                                    <label for="plink-new" class="col-form-label">URL</label>
                                    <input class="form-control" type="text" id="plink-new">

                                    <label for="types-new" class="col-form-label">Тип</label>
                                    <input class="form-control" type="text" id="types-new">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                                    <button type="button" class="btn btn-primary" onclick="MENU.savenewtype()">Сохранить</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="newCategoryModal">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Создать / Сохранить категорию</h5>
                                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                                </div>
                                <div class="modal-body">
                                    <label for="name-RU-new" class="col-form-label">Название на Русском</label>
                                    <input class="form-control" type="text" id="name-RU-new">

                                    <label for="name-UA-new" class="col-form-label">Название на Украинском</label>
                                    <input class="form-control" type="text" id="name-UA-new">

                                    <label for="name-EN-new" class="col-form-label">Название на Английском</label>
                                    <input class="form-control" type="text" id="name-EN-new">

                                    <label for="link-new" class="col-form-label">Ссылка</label>
                                    <input class="form-control" type="text" id="link-new">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                                    <button type="button" class="btn btn-primary" onclick="MENU.savenewcategory()">Сохранить</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-5">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="header-title">Категории</h4>
                                    <div class="single-table">
                                        <div class="table-responsive">
                                            <table class="table text-center">
                                                <thead class="text-uppercase bg-dark">
                                                    <tr class="text-white">
                                                        <th scope="col">#</th>
                                                        <th scope="col">Название</th>
                                                        <th scope="col">Действия</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(let i = 0; i < menu.length; i++){ %>
                                                    <% if(menu[i].edited){ %>
                                                    <tr class="table-success" onclick="MENU.clickcategoty(<%= i %>, true,<%= menu[i].index %>, this)">
                                                        <% }else{ %>
                                                        <tr class="table-dark" onclick="MENU.clickcategoty(<%= i %>, false,<%= menu[i].index %>, this)">
                                                            <% } %>                                                        
                                                            <th scope="row">
                                                                <input type="radio" name="checkmenu" class="checkradio">
                                                            </th>
                                                            <td><%= menu[i].name[0] %></td>
                                                            <td>
                                                                <% if(menu[i].edited){ %>
                                                                <button type="button" class="btn btn-primary btn-xs mb-1" data-toggle="modal" data-target="#newCategoryModal">Редактировать</button>
                                                                <button type="button" class="btn btn-danger btn-xs mb-1" onclick="MENU.removecategory(<%= menu[i].index %>)">Удалить</button>
                                                                <% }else{ %>
                                                                Данную категорию нельзя удалить
                                                                <% } %>                                                                
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 mt-1">
                                        <button type="button" class="btn btn-primary mb-3 col-lg-12" data-toggle="modal" data-target="#newCategoryModal">Создать категорию</button>
                                    </div>
                                </div>                        
                            </div>

                            <div class="col-lg-12 mt-3" id="setting">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Настройки</h4>
                                        <label for="name-RU" class="col-form-label">Название на Русском</label>
                                        <input class="form-control" type="text" id="name-RU">

                                        <label for="name-UA" class="col-form-label">Название на Украинском</label>
                                        <input class="form-control" type="text" id="name-UA">

                                        <label for="name-EN" class="col-form-label">Название на Английском</label>
                                        <input class="form-control" type="text" id="name-EN">

                                        <label for="URL" class="col-form-label">URL</label>
                                        <input class="form-control" type="text" id="URL" readonly>

                                        <label for="TYPE" class="col-form-label">Тип</label>
                                        <input class="form-control" type="text" id="TYPE" readonly>
                                    </div>
                                    <div class="col-lg-12 mt-1">
                                        <button type="button" class="btn btn-success mb-3 col-lg-12" onclick="MENU.saveeditpodlink()">Сохранить</button>
                                    </div>
                                </div>                        
                            </div>                    
                        </div>

                        <div class="col-lg-6 mt-5" id="datatabletype">
                            <div class="card">
                                <div class="card-body">
                                    <div class="preloaderBlock" style="display: none;">
                                        <div class="loader"></div>
                                    </div>
                                    <h4 class="header-title">Типы </h4>

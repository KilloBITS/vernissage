                                        <div class="table-responsive" id="typestable">
                                            <table class="table text-center">
                                                <thead class="text-uppercase bg-dark">
                                                    <tr class="text-white">
                                                        <th scope="col">Название</th>
                                                        <th scope="col">URL</th>
                                                        <th scope="col">Тип</th>                                                   
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 mt-1">
                                    <button type="button" class="btn btn-primary mb-3 col-lg-12" id="createType" data-toggle="modal" data-target="#newTypeModal">Создать тип</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

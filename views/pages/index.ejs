  <div class="top">
    <div class="topLine oneLine">
      <div class="topNavMobMenuOfBtm">
        <div class="menu-wrapper">
          <div class="hamburger-menu"></div>
        </div>
      </div>
      <div class="logotype" style="background-image: url(../../../image/<%= config.logotype %>)"></div>
      <div class="topNavBlockOfBtm">        
        <%- include ./includes/session.ejs %>
        <%- include ./includes/search.ejs %>				
      </div>
    </div>
    <%- include ./includes/menu.ejs %>
  </div>
  <div class="content">
    <div class="header block">
      <div class="nextSliderBtn">></div>
      <div class="prevSliderBtn"><</div>
      <div class="slider-container">
        <div class="slider-control left inactive"></div>
        <div class="slider-control right"></div>
        <div class="slider">
          <% for(var i = 0; i < slides.length; i++) { %>
          <% if(i <= 0){ %>
          <div class="slide slide-<%= i %> active">
            <% } else { %>
            <div class="slide slide-<%= i %>">
              <% } %>
              <div class="slide__bg max" style="background-image: url(../../../data/slider/<%= slides[i].slideImage %>)"></div>
              <div class="slide__bg min" style="background-image: url(../../../data/slider/min/<%= slides[i].slideImage %>)"></div>
              <div class="clockTimer"></div>
              <a href="<%= slides[i].slideLink %>" target="_blank">
                <div class="slide-button">
                  <%= slides[i].slideName[numLang] %>
                </div>
              </a>
            </div>
            <% } %>
          </div>
        </div>
        <div class="headerArrow">
          <div class="arrowsss bounce" id="head_arrow"><i class="fa fa-angle-down fa-5x" aria-hidden="true"></i></div>
        </div>
      </div>      
  </div>
</div>
<div class="data block" style="background-color: <%= config.A_COLOR %>">
  <% if(newtovar.length > 0){ %>

<div class="videoFilter"></div>
<video autoplay muted loop>
  <source src="../../../video/<%= config.backvideo %>" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"'>
  </video>
</div>
<div class="news block" style="background-color: <%= config.A_COLOR %>">
  <div class="white_zub" style="background-image: url(../../image/<%= config.bordertop %>)"></div>
  <div class="container" style="max-width: 1024px;">
    <% if(news.length >= 1){ %>
    <div class="mainDLG">
      <div class="mainTitleDLG" style="margin-bottom: 22px;"><%= locale.newstitle %></div>
    </div>
    <% } %>    
    <% if(news.length >= 1){ %>
    <% if(news.length === 1){ var newWidth = '100%' } %>
    <% if(news.length === 2){ var newWidth = '50%' } %>
    <% if(news.length >= 3){ var newWidth = '33%' } %>
    <% for(var i = 0; i < news.length; i++) { %>      
    <div class="column post" data-ix="scale-on-scroll" style="width: <%= newWidth %>">
      <div class="post-module">
        <div class="thumbnail">
          <div class="date">
            <div class="day"><%= news[i].date %></div>
          </div>
          <img src="../../../data/news/<%= news[i].logo %>"/>
        </div>
        <div class="post-content">
          <h1 class="title"><%= news[i].title[numLang] %></h1>
          <textarea id="hideareaNews<%= i %>" style="display: none;"><%= news[i].text[numLang] %></textarea>
          <div class="description" id="descriptionNews<%= i %>"></div>
          <script type="text/javascript">
            $("#descriptionNews<%= i %>").append($('#hideareaNews<%= i %>').val());
          </script>
          <a href="#" class="openNews"><%= locale.readonly %></a>
        </div>
      </div>
    </div>
    <% } %>
    <% } %>     
  </div>
  <% if(news.length > 6){ %>
  <a href="#">
    <div class="mainBTN" data-ix="scale-on-scroll">
      <%= locale.allnews %>
    </div>
  </a>
  <% } %>
</div>

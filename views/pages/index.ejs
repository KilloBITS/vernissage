    <div class="countersB post"  data-ix="scale-on-scroll">
      <div class="counters_icon" id="buyers"></div>
      <div class="counters_text"><%= locale.buyers %></div>
      <div class="counters_length">0</div>
    </div>
    <div class="countersB post"  data-ix="scale-on-scroll">
      <div class="counters_icon" id="products"></div>
      <div class="counters_text"><%= locale.products %></div>
      <div class="counters_length">0</div>
    </div>
    <div class="countersB post"  data-ix="scale-on-scroll">
      <div class="counters_icon" id="purchases"></div>
      <div class="counters_text"><%= locale.purchases %></div>
      <div class="counters_length">0</div>
    </div>
    <div class="countersB post"  data-ix="scale-on-scroll">
      <div class="counters_icon" id="discounts"></div>
      <div class="counters_text"><%= locale.discounts %></div>
      <div class="counters_length">0</div>
    </div>
  </div>
</div>

<div class="contact block" style="background-color: <%= config.B_COLOR %>">
  <div class="zub_line" style="background-image: url(../../image/<%= config.borderbottom %>)"></div>
  <div class="mainDLG post">
   <div class="mainTitleDLG" data-ix="scale-on-scroll"><%= locale.mainmessage %></div>
   <div class="mainTextDLG" data-ix="scale-on-scroll-delay-300"><%= locale.mainmessagetxt %></div>
 </div>
 <form class="cf">
  <div class="half left cf">
    <input type="text" name="MyName" id="input-name" placeholder="<%= locale.yourname %>">
    <input type="email" name="myEmail" id="input-email" placeholder="<%= locale.email %>">
    <input type="text" name="myTheme" id="input-subject" placeholder="<%= locale.messagesubject %>">
  </div>
  <div class="half right cf">
    <textarea name="message" type="text" id="input-message" placeholder="<%= locale.entertext %>"></textarea>
  </div>

  <div class="send-button" id="input-submit" onclick="Global.submitmessage()">
    <span class="text"><%= locale.tosend %></span>
  </div>
</form>
</div>
</div>
<%- include ./includes/footer.ejs %>
<div class='back-to-top' id='back-to-top' title='Back to top'>
  <i class='fa fa-chevron-up'></i>
</div>
<div id="pageMessages"></div>
</div>

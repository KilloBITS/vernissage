</a>
<div class="zub_lineB" style="background-image: url(../../image/<%= config.borderbottom %>)"></div>
</div>
</div>
<div class="videoBlock block">
  <div class="container">
    <div class="buttonGallery" data-click-state='1'><%= locale.gallery %></div>
    <div class="insta_logo"  data-ix="scale-on-scroll">
      <span><%= locale.myinsta %></span>
    </div>
    <h3><%= locale.reviews %></h3>
    <div class="carouselInsta">
      <div class="carousel__nav">
       <span id="moveLeft" class="carousel__arrow">
        <svg class="carousel__icon" width="24" height="24" viewBox="0 0 24 24">
          <path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"></path>
        </svg>
      </span>
      <span id="moveRight" class="carousel__arrow" >
        <svg class="carousel__icon"  width="24" height="24" viewBox="0 0 24 24">
          <path d="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"></path>
        </svg>
      </span>
    </div>

    <% for(let i = 0; i < reviewsSlide.length; i++){ %>        
    <div class="carousel-item carousel-item--<%= i %>">
      <div class="carousel-item__image" style="background-image: url(../../../data/instagram/<%= reviewsSlide[i].data %>);"></div>
      <div class="carousel-item__info">
        <div class="carousel-item__container">
          <h2 class="carousel-item__subtitle"><%= reviewsSlide[i].title %></h2>
          <h1 class="carousel-item__title"><%= reviewsSlide[i].name %></h1>
          <p class="carousel-item__description"><%= reviewsSlide[i].text %></p>
          <a href="https://www.instagram.com/<%= reviewsSlide[i].link %>/" class="carousel-item__btn">@<%= reviewsSlide[i].link %></a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <div class="galleryInsta">
    <div class="demo-gallery">
      <ul id="lightgallery">
        <% for(let i = 0; i < reviewsSlide.length; i++){ %>        
        <li data-responsive="../../../data/instagram/<%= reviewsSlide[i].data %> 375, ../../../data/instagram/<%= reviewsSlide[i].data %> 480, ../../../data/instagram/<%= reviewsSlide[i].data %> 800" data-src="../../../data/instagram/<%= reviewsSlide[i].data %>"
          data-sub-html="<h4><%= reviewsSlide[i].title %><%= reviewsSlide[i].name %></h4><p><%= reviewsSlide[i].text %></p>">
          <a href="">
            <img class="img-responsive" src="../../../data/instagram/<%= reviewsSlide[i].data %>">
            <div class="demo-gallery-poster">
              <img src="https://sachinchoolur.github.io/lightgallery.js/static/img/zoom.png">
            </div>
          </a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
  <a href="https://www.instagram.com/ladyman_store/" target="_blank" id="toInstagramm">@LADIMAN_STORE</a>

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= locale.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes">
  <link rel="shortcut icon" href="image/favicon.ico" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css?family=Comfortaa|Didact+Gothic|Fira+Sans+Extra+Condensed|PT+Mono|Yanone+Kaffeesatz" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/style/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="/style/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/style/flickity.min.css">
  <link rel="stylesheet" type="text/css" href="/style/animate.min.css">
  <link rel="stylesheet" type="text/css" href="/style/global.css">
  <link rel="stylesheet" type="text/css" href="/style/global.min.css">
  <link rel="stylesheet" type="text/css" href="/style/oplata/oplata.css">
  <link rel="stylesheet" type="text/css" href="/style/oplata/oplata.min.css">
  <!-- <link rel="stylesheet" href="https://unpkg.com/flickity@2.0/dist/flickity.min.css"> -->
  <script type="text/javascript" src="/script/jquery-3.2.1.js"></script>
  <script type="text/javascript" src="/script/jquery-3.2.1.min.js"></script>
  <script type="text/javascript" src="/script/jquery-ui.js"></script>
  <script type="text/javascript" src="/script/maskinput.js"></script>
  <script type="text/javascript" src="script/oplata/oplata.js"></script>
  <script type="text/javascript" src="script/global.js"></script>
  <script type="text/javascript" src="script/basket.js"></script>
  <script src="assets/js/pace.min.js"></script>
  <% if(isAdm){ %>
  <script type="text/javascript" src="script/ADM_FOLDER/adm_script.js"></script>
  <link rel="stylesheet" type="text/css" href="script/ADM_FOLDER/adm_style.css">
  <% } %>
</head>
<body>
  <%- include ./includes/preloader.ejs %>
  <%- include ./includes/closed.ejs %>  
  <div class="top">
    <div class="topLine oneLine">
      <div class="topNavMobMenuOfBtm">
        <div class="menu-wrapper">
          <div class="hamburger-menu"></div>
        </div>
      </div>
      <div class="logotype" style="background-image: url(../../../image/<%= config.logotype %>)"></div>
      <div class="topNavBlockOfBtm">
        <%- include ./includes/session.ejs %>
        <div class="basketBlock">
          <span>0</span>
        </div>
      </div>
    </div>
    <%- include ./includes/menu.ejs %>
  </div>

  <div class="content">
    <div class="vector_head">
      <img src="../../../data/oplata/PAGE_TITLE.jpg">
    </div>
    <div class="title_head max1024 bigtext">
      <%= locale.theme %>
    </div>

    <div class="OPLATA_TITLE  max1024"><%= locale.minTitle1 %></div>
    <ul class="cards  max1024">
      <% for(var i = 0; i < payment.length; i++) { %>
      <li class="cards__item">
        <div class="card">
          <div class="card__image card__image--fence" style="background-image: url(../../../data/oplata/<%= payment[i].img %>)"></div>
          <div class="card__content">
            <div class="card__title"><%= payment[i].title %></div>
            <p class="card__text"><%= payment[i].text %></p>
          </div>
        </div>
      </li>
      <% } %>
    </ul>
    <div class="OPLATA_TITLE  max1024"><%= locale.minTitle2 %></div>
    <ul class="cards  max1024">
      <% for(var i = 0; i < delivery.length; i++) { %>
      <li class="cards__item">
        <div class="card">
          <div class="card__image card__image--fence" style="background-image: url(../../../data/oplata/<%= delivery[i].img %>)"></div>
          <div class="card__content dost" id="dost_<%= i %>">
            <div class="noneDAta"></div>
            <div class="card__title"><%= delivery[i].title %></div>
            <p class="card__text"><%= delivery[i].text %></p>
            <% if(i === 0 && config.NP_API.enabled){ %>
            <div class="NP_modal"></div>
            <div class="searchNPLine">
              <input type="text" id="TTHNP" placeholder="<%= locale.TTN %>">
              <input type="text" id="TTHPN" placeholder="<%= locale.newpostnum %>">
              <input type="button" id="TTHPSEND">
            </div>

            <style type="text/css">
            .NP_modal{

            }
            .searchNPLine{

            }
            #TTHNP,#TTHPN{
              width: 100%;
              height: 30px;
              padding-left: 10px;
              border: 1px solid silver;
              border-radius: 4px;
              margin-top: 5px;
            }
            #TTHPSEND{
              background-image: url(data:image/svg+xml;utf8;base64,);
              width: 100%;
              height: 30px;
              padding-left: 10px;
              border: 1px solid #d84731;
              border-radius: 4px;
              margin-top: 5px;
              background-color: #d95449;
              background-repeat: no-repeat;
              background-position: center;
              background-size: 20px;
            }
          </style>

          <script>
            var CCC = {
              "apiKey": "<%= config.NP_API.key %>",
              "modelName": "TrackingDocument",
              "calledMethod": "getStatusDocuments",
              "methodProperties": {
                "Documents": [
                {
                  "DocumentNumber": "",
                  "Phone":""
                }
                ]
              }
            };
            $("#TTHPSEND").click(function(){
              CCC.methodProperties.Documents[0].DocumentNumber = $("#TTHNP").val();
              CCC.methodProperties.Documents[0].Phone = $("#TTHPN").val();
              var settings = {
                "async": true,
                "crossDomain": true,
                "url": "https://api.novaposhta.ua/v2.0/json/",
                "method": "POST",
                "headers": {
                  "content-type": "application/json",
                },
                "processData": false,
                "data": JSON.stringify(CCC)
              }

              $.ajax(settings).done(function (response) {
                $(".NP_modal").html('<b>'+response.data[0].Status+'</b>')
              });
            });
          </script>
          <% } %>
        </div>
      </div>
    </li>
    <% } %>
  </ul>

  <div class="title_head max1024">
    <p class="c24to7"><%= locale.paymentParams[0] %></p>
    <p class="sZ7"><%= locale.paymentParams[1] %></p>
    <p class="wz"><%= locale.paymentParams[2] %></p>
    <p class="pz"><%= locale.paymentParams[3] %></p>
  </div>

</div>

<%- include ./includes/footer.ejs %>
<%- include ./includes/basket.ejs %>
<div id="pageMessages"></div>
</body>
</html>
